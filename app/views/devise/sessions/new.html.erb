<div class="form-2">
  <h1 class="log-in">Log in</h1>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <span class="email"><i class="material-icons" style="font-size:18px;">email</i><%= f.label :email %><br /> </span>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "something@gmail.com" %>
      </div>

      <div class="field">
        <span class="password"><i class="material-icons" style="font-size:18px;">lock</i><%= f.label :password %><br /></span>
        <%= f.password_field :password, autocomplete: "off", placeholder: "password" %>
      </div>

      <!-- <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%> -->

      <p class="clearfix">

          <%= render "devise/shared/links" %>

        <%= f.submit "Continue" %>

      </p>
    <% end %>


      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
        <p class="signup">Don't have an account? &nbsp;<%= link_to "Sign up", new_registration_path(resource_name) %><br /></p>
      <% end -%>



</div>
