<div class="form-3">
    <h1 class="signin">Sign up</h1>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="field">
          <span class="email"><i class="material-icons" style="font-size:18px;">email</i><%= f.label :email %><br/></span>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email Address" %>
        </div>

        <div class="field">

          <% if @minimum_password_length %>
          <span class="password"><i class="material-icons" style="font-size:18px;">lock</i><%= f.label :password, "Password (6 char. min)" %></span>

          <% end %><br />
          <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Password" %>
        </div>

        <div class="field">
          <span class="password_confirm"><i class="material-icons" style="font-size:18px;">lock</i><%= f.label :password_confirmation %><br /></span>
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Password Confirmation" %>
        </div>

        <p class="clearfix1">
                <%= render "devise/shared/links" %>
          <%= f.submit "Continue" %>
        </p>
      <% end %>


      <%- if controller_name != 'sessions' %>
      <p class="signup">Already have an account? &nbsp;<%= link_to "Log In", new_session_path(resource_name) %><br /></p>

      <% end -%>

  </div>

  <br>
  <div class="instruction">
    <h2>*The website isn't functional until you do the following:</h2>
    <br>
    <h4>1. Log in as an admin (Email: useradmin@gmail.com, Password: useradmin)</h4>
    <h4>2. Click on the link 'Add Pick of the Day' in the nav bar</h4>
    <h4>3. Create the flower of the day (make sure you select today's date)</h4>
    <h4>4. Explore this website as an admin, or log out and log in as a normal user.</h4>
  </div>
