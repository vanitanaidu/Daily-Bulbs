
<body class=center>

    <%= form_for user, :url => user_addresses_path(user), method: :post do |f| %>
      <h1 class="address_heading"> Delivery Address </h1>

      <%= f.fields_for :addresses do |address| %>
      <% $add = address.object %>
        <% if !address.object.id.present? %>
          <%= address.hidden_field :address_type %>


          <%= render partial: "form_errors", locals: {form: address} %>


          <label><strong><%= address.object.address_type %></strong></label>
          <fieldset>

            <p><%= address.label :street_1 %>* </p>
            <p class="input_street_1"><%= address.text_field :street_1 %> </p>


            <p><%= address.label :street_2 %></p>
            <p class="input_street_2"><%= address.text_field :street_2 %></p>

          </br>

            <span class="city">
              <%= address.label :city %>*
              <%= address.text_field :city %>
            </span>

            <span class="state">
              <%= address.label :state %>*
              <%= address.text_field :state %>
            </span>

            <span class="zip_code">
              <%= address.label :zip_code %>*
              <%= address.text_field :zip_code %>
            </span>
          </fieldset>
        <% end %>
      <% end %>
      <br></br>

      <%= f.fields_for :messages do |message| %>

        <% if !message.object.id.present? %>
          <label><strong>Message to Recipient</strong></label>

          <fieldset>


        <%= render partial: "form_errors", locals: {form: message} %>

            <p><%= message.label :content %></p>
            <p class="content"><%= message.text_area :content, placeholder: "Write a little note to your loved one...."%></p>


          </fieldset>
        <% end %>
      <% end %>
        <br></br>
        * required fields
        <br></br>
        <br>
        <br>

    <div id="review_order_button">  <%= f.submit "Review my Order" %> </div>
    <% end %>

    <div id="address_form">
    <div id="address_error_msg">

</div>

</body>
