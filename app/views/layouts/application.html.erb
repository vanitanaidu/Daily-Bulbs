<!DOCTYPE html>
<html>
  <head>
    <title>RailsPortfolioProject</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
  <%= render 'layouts/header' %>

  </head>

  <body>

      <h3><%= content_tag(:div, flash[:error], :id => "flash_error") if flash[:error] %></h3>
      <h3><%= content_tag(:div, flash[:notice], :id => "flash_notice") if flash[:notice] %></h3>
      <h3><%= content_tag(:div, flash[:alert], :id => "flash_alert") if flash[:alert] %></h3>

    <%= yield %>
  </body>
</html>
